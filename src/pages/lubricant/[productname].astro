import ProductCta from "../../components/Product_cta.astro";
import Layout from "../../layouts/Layout.astro";
export async function getStaticPaths() {
  const response = await fetch(
    "http://192.168.2.126:8001/api/resource/Website%20Item?filters=[[%22custom_product_category%22,%22=%22,%22Lubricant%20Raw%20Material%22],[%22published%22,%22=%22,%221%22]]&fields=[%22*%22]&limit_page_length=none"
  );
  const data = await response.json();

  const paths = data.data.map((productName) => ({
    params: { productname: productName.custom_website_path },
    props: {
      product_img: productName.custom_product_image,
      proper_product_name: productName.web_item_name,
      custom_img:
        "http://192.168.2.126:8001/" +
        productName.custom__product_application_image,
      custom_banner_img:
        "http://192.168.2.126:8001/" + productName.custom_product_image,
      price: productName.custom_price,
      product_id: productName.name,
    },
  }));

  return paths;
}

const { productname } = Astro.params;
const {
  proper_product_name,
  custom_img,
  custom_banner_img,
  price,
  product_id,
} = Astro.props;

const response = await fetch(
  `http://192.168.2.126:8001/api/resource/Website%20Item/${product_id}`
);
const data = await response.json();
const product_application = data.data.custom_application;
const product_specs_data = data.data.custom_website_product_specification;
let specification_names = Array.from(
  new Set(product_specs_data.map((data) => data.specification_type))
);
