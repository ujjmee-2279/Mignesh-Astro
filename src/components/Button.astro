---
interface Props {
  data: string;
  link?: string;
}

const { data, link } = Astro.props;
---

<!-- Client Section Slider Jquery Script   -->
<link
  rel="stylesheet"
  href="https://cdn.jsdelivr.net/jquery.slick/1.6.0/slick.css"
/>
<script src="https://code.jquery.com/jquery-2.2.0.min.js" type="text/javascript"
></script>
<script src="https://cdn.jsdelivr.net/jquery.slick/1.6.0/slick.min.js"></script>

<div class="flex w-full justify-start items-end">
  <a
    class="btn-6 z-10 text-base text-white bg-[#E98135] border-0 py-1 px-2 ssm:p-2 gap-2 md:py-2 md:px-4 md:gap-4 rounded uppercase flex flex-row items-center"
    href={link}
  >
    <span></span>
    <p class="">
      {data}
    </p>
    <svg
      xmlns="http://www.w3.org/2000/svg"
      width="9"
      height="13"
      viewBox="0 0 9 13"
      fill="none"
      class="my-2"
    >
      <path
        fill-rule="evenodd"
        clip-rule="evenodd"
        d="M1.917 12.009L0 10.122L4.182 6.005L0 1.887L1.917 0L8.014 6.005L1.917 12.009Z"
        fill="white"></path>
    </svg>
  </a>
</div>
<script src="../../public/js/button_hover.js"></script>
