---
interface Props {
  title?: string;
  data?: string;
  icon?: string;
}

const { title, data, icon } = Astro.props;
---

<div class="p-2.5 xl:w-1/3 lg:w-1/2">
  <div class="h-full flex ssm:flex-row flex-col justify-start text-left">
    <img
      src={icon}
      alt="hero"
      class="object-cover object-strat rounded ssm:w-[72px] ssm:h-[72px] w-16 h-16 ssm:mb-0 mb-2"
      height="72px"
      width="72px"
    />
    <div class="flex-grow ssm:pl-7 ssm:pr-1 ssm:pt-6 item-center card-para">
      <h2 class="title-font  text-base  ssm:text-lg text-[#48389C] mb-1 font-bold  tracking-[0.18px] leading-[24px]">{title}</h2>


      <p class="xl:mb-9  mb-4  text-base leading-6 tracking-[0.16px] text-[#2C2C2C]">{data}</p>

    </div>
  </div>
</div>

<style>
  .card-para h2 {
    font-size: 18px;
    
  }

</style>
